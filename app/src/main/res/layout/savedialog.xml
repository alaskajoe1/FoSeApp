<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="What would you like to call this data?"
            android:id="@+id/textView" android:layout_margin="10dp"/>
    <EditText
            android:id="@+id/fileNameBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="16dp"
            android:hint="filename"
            android:layout_below="@id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/save_cancel_button"
            android:layout_below="@+id/fileNameBox"
            android:layout_gravity="right"
            android:layout_toLeftOf="@+id/dialog_save_button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/dialog_save_button"
            android:layout_below="@+id/fileNameBox"
            android:layout_alignParentRight="true"/>
</RelativeLayout>